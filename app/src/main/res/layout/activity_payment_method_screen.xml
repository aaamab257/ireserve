<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="com.aaamab.bonappetit.ui.paymentMethod.PaymentMethodScreen.PaymentHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent"
        tools:context=".ui.paymentMethod.PaymentMethodScreen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbarCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/toolbar_style"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/back_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:onClick="@{handler::onBack}"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.457"
                app:srcCompat="@drawable/back_vector" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_method"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toEndOf="@+id/back_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.463" />
            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{handler::home}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home_btn_toolbar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_below="@id/toolbarCon"
            >
            <TextView
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:textColor="#383838"
                android:fontFamily="@font/hn_bold"
                android:layout_height="wrap_content"
                android:text="@string/pay_with"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="40dp"
                android:onClick="@{handler::onCash}"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:background="@drawable/seating_style"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#707070"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/checkCash"
                    android:checked="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#707070"
                    android:layout_height="wrap_content"
                    android:text="@string/cash"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cash_icon"
                    android:layout_marginStart="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:onClick="@{handler::onKent}"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:background="@drawable/seating_style"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#707070"
                    android:layout_marginStart="10dp"
                    android:checked="false"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/checkKent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#707070"
                    android:layout_height="wrap_content"
                    android:text="Knet"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/knet"
                    android:layout_marginStart="15dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:textColor="#383838"
                android:fontFamily="@font/hn_bold"
                android:layout_height="wrap_content"
                android:text="@string/payment_summary"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#707070"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:text="@string/subtotal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/txtSubTotal"
                    android:textColor="#707070"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#707070"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:text="@string/services_charge"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/txtServiceCharge"
                    android:textColor="#707070"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:background="#707070"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#707070"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:text="@string/total_ammount"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#707070"
                    android:id="@+id/txtTotalAmount"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_process"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:onClick="@{handler::onProcess}"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_style_linear"
                android:fontFamily="@font/hn_bold"
                android:text="@string/proceed_payment"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>
</layout>